<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      tal:omit-tag="">
  <ul i18n:domain="plone.mls.listing"
      tal:condition="view/listings | nothing"
      tal:attributes="class string:visualNoMarker manageableList listings listing-${view/type} ${view/type}">
    <tal:item repeat="item view/listings">
      <li class="component"
          tal:attributes="class string:component ${item/class}">
        <metal:manage use-macro="context/raptus_article_macros/macros/manage" />

        <tal:listing tal:define="listing item/listing | nothing" tal:condition="listing">
          <div class="tileItem visualIEFloatFix" style="margin-bottom: 1em;">
            <h2 class="tileHeadline"><a href="" class="summary url"
                tal:attributes="href item/url"><span
                tal:replace="listing/title/value">[Listing Title]</span></a></h2>

            <table class="tileBody">
              <tbody>
                <tr>
                  <td rowspan="6" style="width: 12%; vertical-align: top;">
                    <a href=""
                       tal:define="image listing/lead_image | nothing"
                       tal:condition="image"
                       tal:attributes="href item/url"><img class="image-left" src="" alt="" title=""
                       tal:attributes="src image/thumb;
                                       alt image/title;
                                       title image/title" /></a>
                  </td>
                  <th style="width: 22%"><span tal:replace="listing/price/label | nothing">[Label]</span></th>
                  <td style="width: 22%"><span tal:replace="listing/price/value | nothing">[Value]</span></td>
                  <th style="width: 22%"><span tal:replace="listing/wf_status/label | nothing">[Label]</span></th>
                  <td style="width: 22%"><span tal:replace="listing/wf_status/value | nothing">[Value]</span></td>
                </tr>
                <tr>
                  <th><span tal:replace="listing/listing_type/label | nothing">[Label]</span></th>
                  <td><span tal:replace="listing/listing_type/value | nothing">[Value]</span></td>
                  <th><span tal:replace="listing/images/label | nothing">[Label]</span></th>
                  <td><span tal:replace="listing/images/value | nothing">[Value]</span></td>
                </tr>
                <tr>
                  <th><span tal:replace="listing/object_type/label | nothing">[Label]</span></th>
                  <td><span tal:replace="listing/object_type/value | nothing">[Value]</span></td>
                  <th><span tal:replace="listing/bath_bed/label | nothing">[Label]</span></th>
                  <td><span tal:replace="listing/bath_bed/value | nothing">[Value]</span></td>
                </tr>
                <tr>
                  <th><span tal:replace="listing/location/label | nothing">[Label]</span></th>
                  <td colspan="3"><span tal:replace="listing/location/value | nothing">[Value]</span></td>
                </tr>
                <tr>
                  <th><span tal:replace="listing/location_type/label | nothing">[Label]</span></th>
                  <td colspan="3"><span tal:replace="listing/location_type/value | nothing">[Value]</span></td>
                </tr>
                <tr>
                  <th><span tal:replace="listing/view_type/label | nothing">[Label]</span></th>
                  <td colspan="3"><span tal:replace="listing/view_type/value | nothing">[Value]</span></td>
                </tr>
              </tbody>
            </table>
            <div class="visualClear"></div>
          </div>
        </tal:listing>
      </li>
    </tal:item>
  </ul>
</html>
